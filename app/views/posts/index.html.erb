<%= link_to 'Write_story', new_post_path , class: "btn btn-outline-primary" %> &nbsp; &nbsp;
<%= link_to 'All_Stories', all_posts_path , class: "btn btn-outline-primary" %>&nbsp; &nbsp;
<%= link_to 'Back', '/' , class: "btn btn-outline-primary" %>

<hr>
<h2>My Stories</h2>

<table  class="table">
  <thead>
    <tr>
      <th scope="col">Story title</th>
      <th scope="col">Written by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%
    user_posts = Post.where(user_id: @current_user)
  %>
    <% user_posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post , class: "btn btn-outline-success" %></td>
        <td><%= link_to 'Edit', edit_post_path(post) , class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
