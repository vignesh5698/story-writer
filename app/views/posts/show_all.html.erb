<%= link_to 'Write_story', new_post_path , class: "btn btn-outline-primary" %> &nbsp; &nbsp;
<%= link_to 'All_Stories', all_posts_path , class: "btn btn-outline-primary" %>&nbsp; &nbsp;
<%= link_to 'Back', '/' , class: "btn btn-outline-primary" %>&nbsp; &nbsp;

<hr>
<h3 class='all-story-header'>All Stories</h3>

<table  class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Story title</th>
      <th scope="col">Written by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%
    posts = Post.all
  %>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to 'Show', post, class: "btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

