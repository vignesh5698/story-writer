<%= javascript_pack_tag 'application' %>
<div class="home-page">

  <h1>Story Writer</h1>
  <% if current_user %>
    <div>
      <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-outline-primary mb-2" %>
    </div>
    <div>
      <%= link_to 'Stories', posts_path, class: "btn btn-outline-primary" %>
    </div>
  <% else %>
    <div>
      <%= link_to 'Sign up', new_user_registration_path, class: "btn btn-outline-primary mb-2" %>
    </div>
    <div>
      <%= link_to 'Sign in', new_user_session_path, class: "btn btn-outline-primary" %>
    </div>
  <% end %>  
</div>
